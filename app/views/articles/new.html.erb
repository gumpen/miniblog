<div class="row">
  <%= form_tag('/articles', method: :post) do %>
  <div class="row">
    <div class="input-field col s12">
      <input placeholder="タイトル" class="materialize-textarea" name="title">

      <textarea placeholder="本文" class="materialize-textarea" name="text"></textarea>

      <button class="btn waves-effect waves-light brown darken-3" type="submit" name="action">
        <i class="material-icons">投稿する</i>
      </button>

    </div>
  </div>
  <% end %>
</form>
</div>

