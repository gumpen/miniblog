<div class="container">
  <% @articles.each do |article| %>
  <div class="content-wrapper">
  <div class="row valign-wrapper">
    <div class="col s12">

        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= article.title %></span>
            <p><%= article.text %></p>
          </div>
          <div class="card-action">
            <a class="waves-effect waves-light btn">見る</a>
            <% if user_signed_in? && article.user_id == current_user.id %>
            <a class="waves-effect waves-light btn">編集する</a>
            <div class="waves-effect waves-light btn delete-button">
            <%= link_to '削除する', "/articles/#{article.id}",method: :delete, id: "delete-link" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
